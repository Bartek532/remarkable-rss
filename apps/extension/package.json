{
  "name": "extension",
  "version": "1.0.0",
  "description": "RSSmarkable browser extension",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "vitest",
    "test:ci": "vitest --run",
    "lint": "eslint . --max-warnings 0"
  },
  "type": "module",
  "dependencies": {
    "@radix-ui/react-avatar": "1.0.4",
    "@radix-ui/react-slot": "1.0.2",
    "@rssmarkable/shared": "workspace:*",
    "class-variance-authority": "0.7.0",
    "clsx": "^1.2.1",
    "construct-style-sheets-polyfill": "3.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^1.8.1",
    "webextension-polyfill": "0.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-typescript": "11.1.6",
    "@rssmarkable/config": "workspace:*",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "0.0.263",
    "@types/node": "20.8.10",
    "@types/prettier": "^2.7.2",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.18",
    "@types/ws": "8.5.8",
    "@vitejs/plugin-react": "4.2.0",
    "autoprefixer": "^10.4.7",
    "chokidar": "3.5.3",
    "cross-env": "7.0.3",
    "fs-extra": "11.1.1",
    "jsdom": "^22.1.0",
    "magic-string": "^0.30.6",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.31",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "rollup": "4.3.0",
    "tailwindcss": "^3.4.1",
    "ts-loader": "9.5.0",
    "tslib": "2.6.2",
    "vite": "5.0.12",
    "vitest": "^1.2.2",
    "ws": "8.14.2"
  }
}
